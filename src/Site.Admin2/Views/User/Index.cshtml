@using Site.Admin2.ViewModels

@model UsersVM

<h1>Users</h1>

@Html.ActionLink("Create","Create","User")

<div class="table-responsive">          
    <table class="table table-striped table-hover">
        <thead>
            <th>Client</th>
            <th>Username</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
            <th></th>
            <th></th>
        </thead>
        <tbody>
            @foreach(var user in Model.Users) {
            <tr>
                    <td>@user.Client</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@Html.ActionLink("Details","Details","User", new { id=@user.Id })</td>
                    <td>@Html.ActionLink("Edit","Edit","User", new { id=@user.Id })</td>
                    <td>@Html.ActionLink("Delete","Delete","User", new { id=@user.Id })</td>
            </tr>
            }
        </tbody>
    </table>
</div>

