@model Site.Admin2.ViewModels.AuditsVM

<h1>Audit logs</h1>

<div class="table-responsive">          
    <table class="table table-striped table-hover">
        <thead>
            <th>DateCreated</th>
            <th>Type</th>
            <th>Client</th>
            <th>User</th>
            <th>Message</th>   
        </thead>
        <tbody>
            @foreach(var log in Model.Logs) {
            <tr>
                    <td>@log.DateCreated</td>
                    <td>@log.Type</td>
                    <td>(client to-do)</td>
                    <td>(user to-do)</td>
                    <td>@log.Message</td>
            </tr>
            }
        </tbody>
    </table>
</div>
